{{> header}}

  <!-- header -->
  <div class="well">
    <div class="container">
      <div class="page-header">
        <h1>Photo Places <small>Where can I take this pictures?</small></h1>
      </div>
    </div>
  </div>

<!-- single image bellow -->



  <div>Single image will display here once clicked on index page</div>



  <!-- page content -->
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        
        <!-- new post form-->
        <form class="form-inline" id="create-post">
          <div class="form-group">
            <input type="text" name="title" class="form-control" placeholder="Title" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="description" class="form-control" placeholder="Description">
          </div>
          <div class="form-group">
            <input type="submit" class="btn btn-default" value="Add Post">
          </div>
        </form>
        <br>

        <!-- list of posts -->
        <ul class="list-group" id="posts-list">
          
          <!-- handlebars template -->
          <script id="posts-template" type="text/x-handlebars-template">
            \{{#each Comment}}
              <li class="list-group-item post" data-id="\{{_id}}">
                // <!-- post label (title) -->
                <span class="label label-default">\{{title}}</span>
                
                // <!-- post description -->
                \{{description}}
                <div class="pull-right">
                  // <!-- pencil icon to toggle update form -->
                  <a href="javascript:void(0)" data-toggle="collapse" data-target="#update-\{{_id}}">
                    <span class="glyphicon glyphicon-pencil"></span>
                  </a>
                  
                  // <!-- trash can icon to delete post -->
                   <a href="javascript:void(0)" class="delete-post">
                    <span class="glyphicon glyphicon-trash"></span>
                  </a>
                </div>
                
                // <!-- form to update post -->
                <div class="collapse" id="update-\{{_id}}">
                  <br>
                  <form class="form-inline update-post">
                    <div class="form-group">
                      <input type="text" name="title" class="form-control" placeholder="Title" value="\{{title}}">
                    </div>
                    <div class="form-group">
                      <input type="text" name="description" class="form-control" placeholder="Description" value="\{{description}}">
                    </div>
                    <div class="form-group">
                      <input type="submit" class="btn btn-block btn-default" value="Update">
                    </div>
                  </form>
                </div>
              </li>
            \{{/each}}
          </script>
        </ul>
      </div>
    </div>
  </div>
  
  <!-- jquery -->
  <script type="text/javascript" src="https://code.jquery.com/jquery-1.11.3.min.js"></script>

  <!-- bootstrap js -->
  <script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

  <!-- handlebars -->
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.3/handlebars.min.js"></script>

  <!-- Here Masonry library cdn -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/masonry/3.3.2/masonry.pkgd.min.js"></script>

  <script type="text/javascript" src="show.js"></script>

  <!-- custom script -->
  <script type="text/javascript" src="scripts/show.js"></script>
</body>
</html>